<!DOCTYPE html>
<html>
<head>
  <title>Crowdfunder</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'layouts/shared/nav' %>


<div class="container">
  <div class="flash">
    <% if flash[:alert] %>
      <p id="alert" class="alert alert-error"><%= flash[:alert] %></p>
    <% elsif flash[:notice] %>
      <p id="success" class="alert success-block"><%= flash[:notice] %></p>
    <% end %>
  </div>
	<%= yield %>
  <%= render 'layouts/shared/footer' %>
</div>


</body>
</html>
