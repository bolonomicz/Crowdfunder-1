<!DOCTYPE html>
<html>
<head>
  <title>Crowdfunder</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'layouts/shared/nav' %>
<div class="flash">
	<% if flash[:alert] %>
    <p id="alert" class="alert alert-block"><%= flash[:alert] %></p>
  <% end %>
  <% if flash[:success] %>
    <p id="success" class="alert success-block"><%= flash[:success] %></p>
  <% end %>
</div>

<div class="container">
	<%= yield %>
</div>


</body>
</html>
