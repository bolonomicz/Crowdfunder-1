<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <% if logged_in? %>
        <%= link_to "CrowdFunder", projects_path, class: "brand" %>
       <% else %>
         <%= link_to "CrowdFunder", root_path, class: "brand" %>
      <% end %>  
      <div class="nav-collapse collapse">
        <ul class="nav">
          <% unless logged_in? %>
              <li class="<%= 'active' if @nav == :home %>">
            <%= link_to 'Home', :root %>
          </li>
          <% end %>
          <li class="<%= 'active' if @nav == :projects %>">
            <%= link_to 'Projects', :projects %>
          </li>
          <% if logged_in? %>
            <li class="divider-vertical"></li>
            <li class="<%= 'active' if @nav == :my_projects %>">
              <%= link_to 'My Projects', [:my, :projects] %>
            </li>
            <li class="<%= 'active' if @nav == :new_my_project %>">
              <%= link_to 'New Projects', [:new, :my, :project] %>
            </li>  
          <% end %>
        </ul>
      </div>
      <div class=" pull-right">
        <% if logged_in? %>
            <%= link_to 'Logout', session_path(current_user), method: :delete, class: 'btn btn-danger' %>
        <% else %>
            <%= link_to 'Sign In', new_session_path, class: 'btn btn-success' %>
            <%= link_to 'Sign Up', [:new, :user], class: 'btn btn-primary'%>
        <% end %>
      </div>
    </div>
  </div>
</div>

